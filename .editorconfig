# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
max_line_length = 72
indent_size = 2

[*.{js,py}]
charset = utf-8

[vimrc]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
